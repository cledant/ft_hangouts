<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/relativeLayout">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/btn_star"
            android:id="@+id/grid_contact_image"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            android:contentDescription="@string/grid_contact_pic_desc" android:adjustViewBounds="true"/>
    <TextView
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:id="@+id/grid_contact_title"
            app:layout_constraintStart_toEndOf="@+id/grid_contact_image"
            app:layout_constraintTop_toTopOf="@+id/grid_contact_image" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="12sp"/>
    <TextView
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:id="@+id/grid_contact_number"
            app:layout_constraintBottom_toBottomOf="@+id/grid_contact_image"
            app:layout_constraintStart_toEndOf="@+id/grid_contact_image" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="12sp"/>

</android.support.constraint.ConstraintLayout>